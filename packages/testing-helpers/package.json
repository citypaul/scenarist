{
  "name": "@scenarist/testing-helpers",
  "version": "0.0.0",
  "description": "Type-safe testing utilities for Scenarist",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@scenarist/core": "workspace:*"
  },
  "devDependencies": {
    "@scenarist/eslint-config": "workspace:*",
    "@scenarist/typescript-config": "workspace:*",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.34.0",
    "express": "^4.18.2",
    "supertest": "^7.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "peerDependencies": {
    "supertest": "^6.0.0 || ^7.0.0"
  }
}
