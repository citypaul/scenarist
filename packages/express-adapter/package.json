{
  "name": "@scenarist/express-adapter",
  "version": "0.1.2",
  "description": "Express middleware adapter for Scenarist",
  "author": "Paul Hammond (citypaul) <paul@packsoftware.co.uk>",
  "license": "MIT",
  "homepage": "https://github.com/citypaul/scenarist#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/citypaul/scenarist.git",
    "directory": "packages/express-adapter"
  },
  "bugs": {
    "url": "https://github.com/citypaul/scenarist/issues"
  },
  "keywords": [
    "express",
    "middleware",
    "msw",
    "testing",
    "scenario-testing",
    "mock-service-worker",
    "integration-testing",
    "e2e-testing",
    "typescript"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "production": "./dist/setup/production.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --project tsconfig.typecheck.json --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@scenarist/core": "workspace:*",
    "@scenarist/msw-adapter": "workspace:*",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0",
    "msw": "^2.0.0"
  },
  "devDependencies": {
    "@scenarist/eslint-config": "workspace:^",
    "@scenarist/typescript-config": "workspace:*",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "express": "^5.1.0",
    "msw": "^2.12.1",
    "supertest": "^7.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
