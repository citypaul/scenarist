{
  "name": "@scenarist/playwright-helpers",
  "version": "0.4.7",
  "description": "Playwright test helpers for Scenarist scenario management",
  "author": "Paul Hammond (citypaul) <paul@packsoftware.co.uk>",
  "license": "MIT",
  "homepage": "https://github.com/citypaul/scenarist#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/citypaul/scenarist.git",
    "directory": "packages/playwright-helpers"
  },
  "bugs": {
    "url": "https://github.com/citypaul/scenarist/issues"
  },
  "keywords": [
    "playwright",
    "testing",
    "test-helpers",
    "scenario-testing",
    "msw",
    "mock-service-worker",
    "e2e-testing",
    "integration-testing",
    "typescript"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "playwright test",
    "test:watch": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@scenarist/core": "workspace:*"
  },
  "peerDependencies": {
    "@playwright/test": "^1.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@scenarist/eslint-config": "workspace:*",
    "@scenarist/typescript-config": "workspace:*",
    "@types/node": "^25.2.3",
    "msw": "^2.12.10",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
