{
  "name": "@scenarist/playwright-helpers",
  "version": "0.1.0",
  "description": "Playwright test helpers for Scenarist scenario management",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "playwright test",
    "test:watch": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@playwright/test": "^1.48.2",
    "@scenarist/core": "workspace:*"
  },
  "devDependencies": {
    "@scenarist/eslint-config": "workspace:*",
    "@scenarist/typescript-config": "workspace:*",
    "@types/node": "^24.10.1",
    "msw": "^2.12.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
