  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "playwright",
    "testing",
    "mocking",
    "msw",
    "scenarist",
    "e2e"
