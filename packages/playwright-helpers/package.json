{
  "name": "@scenarist/playwright-helpers",
  "version": "0.1.0",
  "description": "Playwright test helpers for Scenarist scenario management",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@playwright/test": "^1.48.2"
  },
  "devDependencies": {
    "@scenarist/eslint-config": "workspace:*",
    "@scenarist/typescript-config": "workspace:*",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
