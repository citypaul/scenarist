{
  "name": "@scenarist/nextjs-adapter",
  "version": "0.1.7",
  "description": "Next.js adapter for Scenarist (Pages Router and App Router)",
  "author": "Paul Hammond (citypaul) <paul@packsoftware.co.uk>",
  "license": "MIT",
  "homepage": "https://github.com/citypaul/scenarist#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/citypaul/scenarist.git",
    "directory": "packages/nextjs-adapter"
  },
  "bugs": {
    "url": "https://github.com/citypaul/scenarist/issues"
  },
  "keywords": [
    "nextjs",
    "next",
    "app-router",
    "pages-router",
    "react-server-components",
    "msw",
    "testing",
    "scenario-testing",
    "mock-service-worker",
    "integration-testing",
    "e2e-testing",
    "typescript"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./pages": {
      "types": "./dist/pages/index.d.ts",
      "production": "./dist/pages/production.js",
      "import": "./dist/pages/index.js"
    },
    "./app": {
      "types": "./dist/app/index.d.ts",
      "production": "./dist/app/production.js",
      "import": "./dist/app/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --project tsconfig.typecheck.json --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@scenarist/core": "workspace:*",
    "@scenarist/msw-adapter": "workspace:*",
    "zod": "^4.1.13"
  },
  "peerDependencies": {
    "msw": "^2.0.0",
    "next": "^14.0.0 || ^15.0.0"
  },
  "devDependencies": {
    "@scenarist/eslint-config": "workspace:^",
    "@scenarist/typescript-config": "workspace:*",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "msw": "^2.12.3",
    "next": "^14.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
