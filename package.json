{
  "name": "scenarist",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:bruno:ci": "turbo run test:bruno:ci",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "license:check": "license-checker --summary --excludePrivatePackages --onlyAllow 'MIT;Apache-2.0;ISC;BSD-2-Clause;BSD-3-Clause;0BSD;CC0-1.0;CC-BY-3.0;CC-BY-4.0;Unlicense;Python-2.0;BlueOak-1.0.0;MPL-2.0'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.7",
    "typescript": "5.9.3"
  },
  "pnpm": {
    "overrides": {
      "body-parser": ">=2.2.1",
      "jws": ">=3.2.3",
      "axios": ">=1.13.5",
      "fast-xml-parser": ">=5.3.4",
      "tar": ">=7.5.7",
      "lodash": ">=4.17.23",
      "lodash-es": ">=4.17.23",
      "qs": ">=6.14.2"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md,json}": "prettier --write"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22 <25"
  }
}
