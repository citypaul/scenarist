{
  "name": "@scenarist/nextjs-pages-router-example",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:logs": "SCENARIST_LOG=1 next dev",
    "build": "next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "pnpm test:e2e",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --project=chromium --ui",
    "test:logs": "SCENARIST_LOG=1 playwright test --project=chromium",
    "test:custom": "SERVER_MODE=custom playwright test --project=chromium",
    "test:e2e:comparison": "SKIP_MSW=true playwright test --project=comparison",
    "test:e2e:all": "playwright test",
    "test:production": "playwright test --config=playwright.production.config.ts",
    "fake-api": "json-server fake-api/db.json --port 3001",
    "verify:treeshaking": "pnpm build:production && ! grep -rE '(setupWorker|startWorker|http\\.(get|post|put|delete|patch)|HttpResponse\\.json)' .next/ --exclude-dir=cache"
  },
  "dependencies": {
    "@scenarist/nextjs-adapter": "workspace:*",
    "@types/express": "^5.0.6",
    "express": "^5.2.1",
    "msw": "^2.12.7",
    "next": "^15.5.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@scenarist/eslint-config": "workspace:*",
    "@scenarist/playwright-helpers": "workspace:*",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/wait-on": "^5.3.4",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "express4": "npm:express@^4.21.0",
    "json-server": "1.0.0-beta.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
