{
  "name": "@scenarist/nextjs-pages-example",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "pnpm test:e2e && pnpm test:api",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --project=chromium --ui",
    "test:e2e:comparison": "SKIP_MSW=true playwright test --project=comparison",
    "test:e2e:all": "playwright test",
    "test:api": "vitest run",
    "fake-api": "json-server fake-api/db.json --port 3001"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@scenarist/core": "workspace:*",
    "@scenarist/nextjs-adapter": "workspace:*",
    "@scenarist/msw-adapter": "workspace:*",
    "msw": "^2.7.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@scenarist/eslint-config": "workspace:*",
    "@scenarist/playwright-helpers": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.0.0",
    "json-server": "^1.0.0-beta.3",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
