# PayFlow Environment Variables
# Copy this file to .env.local and fill in your credentials

# =============================================================================
# AUTH0 CONFIGURATION
# =============================================================================
# Get these from https://manage.auth0.com after creating a "Regular Web Application"

# The domain of your Auth0 tenant (e.g., your-tenant.us.auth0.com)
AUTH0_DOMAIN=

# Your Auth0 application's client ID
AUTH0_CLIENT_ID=

# Your Auth0 application's client secret
AUTH0_CLIENT_SECRET=

# A long random string used to encrypt cookies (generate with: openssl rand -hex 32)
AUTH0_SECRET=

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from https://dashboard.stripe.com/test/apikeys

# Your Stripe publishable key (starts with pk_test_ or pk_live_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Your Stripe secret key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=

# Your Stripe webhook signing secret (starts with whsec_)
# Get this from Stripe Dashboard > Webhooks after creating a webhook endpoint
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# The base URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Also set APP_BASE_URL for Auth0 SDK
APP_BASE_URL=http://localhost:3000
